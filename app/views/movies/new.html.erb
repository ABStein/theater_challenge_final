<h1>Add a Movie</h1>

<%= form_tag '/movies', method: :post do %>
  <div>
    Title: <input type="text" name="title">
  </div>
  <br>
    <div>
    Rating: <input type="text" name="rating">
  </div>
  <br>
    <div>
    Runtime: <input type="text" name="runtime">
  </div>
  <br>
    <div>
    Poster: <input type="text" name="img">
  </div>
  <br>
    <div>
      <input type="submit" value="Save Movie">
  </div>
<% end %>
