<h1>Orders Dashboard</h1>
<br>
<h2>
  <table style="width:100%">
    <tr>
      <% @showtimes.each do |showtime| %>
      <th><%= showtime.movie.title %>: <%= showtime.seats_sold %> purchased</th>
      <% end %>
    </tr>
  </table>
</h2>

<div class="row">
  <% @tickets.each do |ticket| %>
    <div class="table-md-4 table-sm-6">
      <div>
        <ul>
        <h2>Name: <%= ticket.full_name %></h2>
        <h2>Email: <%= ticket.email %></h2>
        <h2>Credit Card Number: <%= ticket.credit_card_number %></h2>
        <h2>Movie: <%= ticket.showtime.movie.title %></h2>
        <h2>Showtime: <%= ticket.showtime.start_time.strftime('%A, %d %b %Y %l:%M %p') %></a></h2>
        <h2>Theater: <%= ticket.showtime.theater.name %></h2>
        </ul>
        <br>
      </div>
    </div>
  <% end %>
</div>

